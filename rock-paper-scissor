<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>rock,paper,scissor</h1>
    <button onclick=startgame()> Play Game</button>
    <p id="result"></p>
    <p id="score"></p>
    <script>
        let choices=['rock','paper','scissor'];
        let humanscore=0;
        let compscore=0;

        function getComputerChoice(){
            let compchoice=Math.floor(Math.random()*choices.length);
            return choices[compchoice];
        }

        function getHumanChoice(){
            let humanchoice=prompt("Enter your value");
            humanchoice=humanchoice.toLowerCase();
            return humanchoice;
        }

        function playgame(humanChoice,computerChoice){
            if (humanChoice===computerChoice){
                return "its a draw";
            }
            else if ( (humanChoice==='rock' && computerChoice==="paper") || 
            (humanChoice==='paper' && computerChoice==="scissor") || (humanChoice==="scissor" && computerChoice==="rock")){
                compscore++;
                return "You lose";
            }
            else{
                humanscore++;
                return "You win";
            }
        }

        function startgame(){
            let humanChoice=getHumanChoice();
            let computerChoice=getComputerChoice();
            
            const result=playgame(humanChoice,computerChoice);
            document.getElementById('result').textContent=`result: ${result} (Computer chose ${computerChoice})`;
            document.getElementById('score').textContent=`You score ${humanscore}, computer score is ${compscore}`;

        }

    </script>
</body>
</html>
